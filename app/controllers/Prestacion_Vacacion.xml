      <text><![CDATA[
select
	"Prestacion_Vacacion"."Prestacion_Vacacion_Id" "Prestacion_Vacacion_Id"
	,"Prestacion_Vacacion"."Contratante_Prestacion_Id" "Contratante_Prestacion_Id"
