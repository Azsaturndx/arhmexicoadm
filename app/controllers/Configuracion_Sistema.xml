from "dbo"."Configuracion_Sistema" "Configuracion_Sistema"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Configuracion_Sistema"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
