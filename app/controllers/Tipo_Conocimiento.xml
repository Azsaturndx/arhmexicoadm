	FROM
		APP.Tipo_Conocimiento
	WHERE
  		REPLACE(UPPER(Tipo_Conocimiento),' ','') = REPLACE(UPPER(@Tipo_Conocimiento),' ','')
		AND Tipo_Conocimiento_Id <> @Tipo_Conocimiento_Id
),0)

IF @Existe=1
BEGIN
   SET @BusinessRules_PreventDefault = 1
