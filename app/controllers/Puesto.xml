    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Puesto"."Puesto_Id" "Puesto_Id"
	,"Puesto"."Puesto" "Puesto"
	,"Puesto"."Transaccion_Id" "Transaccion_Id"
	,"Usuario_V"."UserName" "cpUserName"
	,"Puesto"."Fecha_Creacion" "Fecha_Creacion"
	,"Usuario_V1"."UserName" "apUserName"
	,"Puesto"."Fecha_Ultima_Actualizacion" "Fecha_Ultima_Actualizacion"
	,"Puesto"."Estatus_Registro_Id" "Estatus_Registro_Id"
	,"Estatus_Registro_"."Estatus_Registro" "Estatus_Registro_Estatus_Registro"
	,"Puesto"."Color_Texto_Id" "Color_Texto_Id"
	,"Color"."Color" "Color_Texto"
	,"Puesto"."Color_Fondo_Id" "Color_Fondo_Id"
	,"Color1"."Color" "Color_Fondo"
	,"Puesto"."Valor_Cuantitativo" "ValorCuantitativo"
	,"Puesto"."Valor_Fin" "ValorFin"
	,"Puesto"."Valor_Inicio" "ValorInicio"
from "APP"."Puesto" "Puesto"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Puesto"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
	left join "dbo"."Usuario_V" "Usuario_V" on "Puesto"."Creado_Por_Id" = "Usuario_V"."UserId"
	left join "dbo"."Usuario_V" "Usuario_V1" on "Puesto"."Actualizado_Por_Id" = "Usuario_V1"."UserId"
	left join "APP"."Color" "Color" on "Puesto"."Color_Texto_Id" = "Color"."Color_Id"
	left join "APP"."Color" "Color1" on "Puesto"."Color_Fondo_Id" = "Color1"."Color_Id"
]]></text>
    </command>
