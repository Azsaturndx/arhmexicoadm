	,Fecha_Creacion = GetDate()
	,Fecha_Ultima_Actualizacion = GetDate()
	,Actualizado_Por_Id = @BusinessRules_UserId	
WHERE
	Puesto_Id= @Puesto_Id]]></rule>
    <rule id="r102" commandName="Update" type="Sql" phase="Before"><![CDATA[DECLARE @Existe BIT

SET @Existe = 0

SET @Existe = IsNULL((
	SELECT
		TOP 1 1
	FROM
		APP.Puesto
	WHERE
		REPLACE(UPPER(Puesto),' ','') = REPLACE(UPPER(@Puesto),' ','')
  		AND Puesto_Id <> @Puesto_Id
),0)

IF @Existe=1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = 'Ya existe esta puesto registrado en la base de datos, favor de corregir.'
   SET @Result_ShowAlert =  'Ya existe esta puesto registrado en la base de datos, favor de corregir.'
   RETURN
END]]></rule>
