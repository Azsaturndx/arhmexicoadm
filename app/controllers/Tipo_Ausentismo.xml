	left join "dbo"."Usuario_V" "Creado_Por" on "Tipo_Ausentismo"."Creado_Por_Id" = "Creado_Por"."UserId"
	left join "dbo"."Usuario_V" "Actualizaddo_Por" on "Tipo_Ausentismo"."Actualizado_Por_Id" = "Actualizaddo_Por"."UserId"
]]></text>
