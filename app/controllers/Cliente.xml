    <rule id="r101" commandName="Update" type="Sql" phase="Before"><![CDATA[DECLARE @Existe BIT

SET @Existe = 0

SET @Existe = IsNULL((
	SELECT 
		TOP 1 1
	FROM
		APP.Cliente
	WHERE
  		REPLACE(UPPER(Cliente),' ','') = REPLACE(UPPER(@Cliente),' ','')
