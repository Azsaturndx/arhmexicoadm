    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Anio"."Anio_Id" "Anio_Id"
	,"Anio"."Anio" "Anio"
	,"Anio"."Transaccion_Id" "Transaccion_Id"
	,"Anio"."Fecha_Creacion" "Fecha_Creacion"
	,"Usuario_V1"."UserName" "apUserName"
	,"Anio"."Fecha_Ultima_Actualizacion" "Fecha_Ultima_Actualizacion"
	,"Anio"."Estatus_Registro_Id" "Estatus_Registro_Id"
	,"Estatus_Registro_"."Estatus_Registro" "Estatus_Registro_Estatus_Registro"
	,"Usuario_V"."UserName" "cpUserName"
from "APP"."Anio" "Anio"
	left join "dbo"."Estatus_Registro" "Estatus_Registro_" on "Anio"."Estatus_Registro_Id" = "Estatus_Registro_"."Estatus_Registro_Id"
	left join "dbo"."Usuario_V" "Usuario_V" on "Anio"."Creado_Por_Id" = "Usuario_V"."UserId"
	left join "dbo"."Usuario_V" "Usuario_V1" on "Anio"."Actualizado_Por_Id" = "Usuario_V1"."UserId"
]]></text>
    </command>
