  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[DECLARE @Existe BIT

SET @Existe = 0

SET @Existe = IsNULL((
	SELECT
		TOP 1 1
	FROM
		APP.Tipo_Remuneracion
	WHERE
		REPLACE(UPPER(Tipo_Remuneracion),' ','') = REPLACE(UPPER(@Tipo_Remuneracion),' ','')
),0)

IF @Existe=1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = 'Ya existe este tipo de remuneración en la base de datos, favor de corregir.'
   SET @Result_ShowAlert =  'Ya existe este tipo de remuneración en la base de datos, favor de corregir.'
   RETURN
END]]></rule>
