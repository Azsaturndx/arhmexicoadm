	left join "dbo"."Persona_V" "Persona_V" on "Persona_Usuario_Aplicacion"."Persona_Id" = "Persona_V"."Persona_Id"
	left join "dbo"."Usuario_V" "u" on "Persona_Usuario_Aplicacion"."Usuario_Aplicacion_Id" = "u"."UserId"
