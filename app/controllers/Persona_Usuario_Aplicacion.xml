    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[DECLARE @Existe BIT

SET @Existe = 0

SET @Existe = IsNULL((
	SELECT
		TOP 1 1
	FROM
		APP.Persona_Usuario_Aplicacion
	WHERE
		Persona_Id = @Persona_Id  
),0)

IF @Existe=1
BEGIN
   SET @BusinessRules_PreventDefault = 1
   SET @Result_ShowViewMessage = 'Ya existe registro de usuario aplicacion en la base de datos, favor de corregir.'
   SET @Result_ShowAlert =  'Ya existe este registro de usuario aplicacion en la base de datos, favor de corregir.'
   RETURN
END
]]></rule>
